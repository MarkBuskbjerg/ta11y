{
	"name": "ta11y",
	"version": "0.1.0",
	"description": "A simple 11ty starter project with complete TailwindCSS integration",
	"main": "index.js",
	"scripts": {
		"prod": "cross-env NODE_ENV=production ELEVENTY_ENV=production npm-run-all clean -p prod:* && npm run wait",
		"prod:11ty": "eleventy --quiet",
		"prod:css": "npx tailwindcss -i src/style.css -o _site/style.css -w",
		"clean": "rimraf _site",
		"dev": "cross-env NODE_ENV=development ELEVENTY_ENV=development npm-run-all clean -p dev:*",
		"dev:11ty": "eleventy --serve --quiet",
		"dev:css": "npx tailwindcss -i src/style.css -o _site/style.css -w",
		"wait": "wait-on _site/style.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MarkBuskbjerg/ta11y.git"
	},
	"keywords": [
		"11ty",
		"tailwindcss",
		"alpine",
		"nunjucks",
		"ssg",
		"jamstack"
	],
	"author": "Mark Buskbjerg",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/MarkBuskbjerg/ta11y/issues"
	},
	"homepage": "https://github.com/MarkBuskbjerg/ta11y#readme",
	"devDependencies": {
		"@11ty/eleventy": "^2.0.1",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"autoprefixer": "^9.7.6",
		"base-64": "^0.1.0",
		"cross-env": "^7.0.2",
		"npm-run-all": "^4.1.5",
		"request": "^2.88.2",
		"rimraf": "^3.0.2",
		"tailwindcss": "^3.3.1",
		"vite": "^4.2.2",
		"wait-on": "^7.0.1"
	},
	"dependencies": {
		"alpinejs": "^3.12.0"
	}
}
