---
pagination:
    data: collections
    size: 1
    alias: tag
eleventyComputed:
    title: 'Articles in category: "{{ tag }}"'
permalink: /category/{{ tag | slugify }}/
layout: page
metadata:
    robots: noindex
---

<ol>
    {% set taglist = collections[tag] %}
    {% for post in taglist | reverse %}
        <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
    {% endfor %}
</ol>

<p>See <a href="/category/">all categories</a>.</p>